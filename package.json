{
  "name": "concept-server",
  "version": "0.0.0",
  "description": "Promise to be a, dynamic and interoperable model, modelling tool with abstraction concept mapping over ontological knowledge graph, allowing integration of data sources and top, middle, low and application level ontologies. This is the back-end.",
  "author": "Giuliano Marinelli",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prod": "node dist/main",
    "start": "nest start",
    "debug": "nest start --debug --watch",
    "build": "nest build",
    "watch": "nest start --watch",
    "watch:all": "concurrently --names \"server,w1,w2,@dynamic-glsp/server,@dynamic-glsp/protocol\" --prefix-colors \"green\" --hide \"w1,w2\" \"pnpm watch\" \"pnpm watch:@dynamic-glsp/server\" \"pnpm watch:@dynamic-glsp/protocol\" \"pnpm chokidar:@dynamic-glsp/server\" \"pnpm chokidar:@dynamic-glsp/protocol\"",
    "watch:@dynamic-glsp/server": "pnpm --filter @dynamic-glsp/server watch",
    "watch:@dynamic-glsp/protocol": "pnpm --filter @dynamic-glsp/protocol watch",
    "chokidar:@dynamic-glsp/server": "chokidar ../../@dynamic-glsp/server/src -c \"pnpm install\"",
    "chokidar:@dynamic-glsp/protocol": "chokidar ../../@dynamic-glsp/protocol/src -c \"pnpm install\""
  },
  "dependencies": {
    "@apollo/express": "npm:express@4.21.1",
    "@apollo/server": "^4.11.3",
    "@casl/ability": "^6.7.3",
    "@dynamic-glsp/protocol": "^1.0.1",
    "@dynamic-glsp/server": "^1.0.1",
    "@eclipse-glsp/protocol": "^2.3.0",
    "@eclipse-glsp/server": "^2.3.0",
    "@nestjs!/graphql-filter": "^1.0.10",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.8",
    "@nestjs/platform-ws": "^11.0.8",
    "@nestjs/serve-static": "^5.0.2",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.8",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "device-detector-js": "^3.0.3",
    "express": "npm:express@5.0.1",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-upload-ts": "^2.1.2",
    "inversify": "^6.2.2",
    "lodash": "^4.17.21",
    "mongodb": "^5.8.0",
    "mysql2": "^3.12.0",
    "pg": "^8.13.1",
    "poly-crypto": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5",
    "uuid-validate": "^0.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@nestjs/cli": ">=11.0.2",
    "@nestjs/schematics": ">=11.0.0",
    "@nestjs/testing": ">=11.0.8",
    "@trivago/prettier-plugin-sort-imports": ">=5.2.2",
    "@types/express": ">=5.0.0",
    "@types/jest": ">=29.5.14",
    "@types/node": ">=22.13.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": ">=8.23.0",
    "@typescript-eslint/parser": ">=8.23.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": ">=9.19.0",
    "eslint-config-prettier": ">=10.0.1",
    "eslint-plugin-prettier": ">=5.2.3",
    "jest": ">=29.7.0",
    "prettier": ">=3.4.2",
    "source-map-support": ">=0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": ">=29.2.5",
    "ts-loader": ">=9.5.2",
    "ts-node": ">=10.9.2",
    "tsconfig-paths": ">=4.2.0",
    "typescript": ">=5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ">=.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
